{
  "$schema": "https://cdn.jsdelivr.net/gh/tauri-apps/tauri@dev/packages/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "identifier": "com.cryptovault.app",
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 768,
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "title": "CryptoVault",
        "width": 1024
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
} 